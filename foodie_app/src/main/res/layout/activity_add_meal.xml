<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="50dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMeal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/add_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Meal"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/add_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_tittle"
            android:hint="add a pic"/>

        <EditText
            android:id="@+id/meal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_photo"
            android:layout_marginTop="20dp"
            android:hint="Name of the Meal"/>

        <Button
            android:id="@+id/button_addMeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/meal_name"
            android:layout_marginTop="20dp"
            android:text="Submit Meal"
            android:textSize="15dp"
            android:onClick="addMeal"/>


    </RelativeLayout>
</androidx.cardview.widget.CardView>